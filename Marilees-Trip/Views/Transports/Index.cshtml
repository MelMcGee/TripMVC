@model IEnumerable<Marilees_Trip.Models.Transport>

@{
    ViewBag.Title = "Add New Departure";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<!--ugh, Visual studio uses a table in their template. Later, update this to divs-->
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FromCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArriveAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
