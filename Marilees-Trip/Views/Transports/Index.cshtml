            @Html.DisplayNameFor(model => model.TransportType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FromCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArriveAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TransportType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vendor)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TransportID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TransportID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TransportID })
        </td>
    </tr>
}

</table>
